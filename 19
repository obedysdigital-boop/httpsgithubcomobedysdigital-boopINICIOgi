import { useState } from 'react';
import { useNavigate } from 'react-router-dom';
import { useAuth } from '@/contexts/AuthContext';
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { FileText, Loader2 } from 'lucide-react';
import { Toaster, toast } from 'sonner';

export function LoginPage() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const navigate = useNavigate();
  const auth = useAuth();

  const handleLogin = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsLoading(true);
    try {
      await auth.login(email, password);
      toast.success('Login bem-sucedido! Redirecionando...');
      setTimeout(() => navigate('/renomeador'), 1500);
    } catch (error) {
      toast.error('Falha no login. Verifique suas credenciais.');
      setIsLoading(false);
    }
  };

  return (
    <div className="w-full lg:grid lg:min-h-[100vh] lg:grid-cols-2 xl:min-h-[100vh]">
      <Toaster richColors position="top-center" />
      <div className="flex items-center justify-center py-12">
        <div className="mx-auto grid w-[350px] gap-6">
          <div className="grid gap-2 text-center">
            <FileText className="h-10 w-10 mx-auto text-primary" />
            <h1 className="text-3xl font-bold">RENOMEADOR NF</h1>
            <p className="text-balance text-muted-foreground">
              Acesse sua conta para começar a gerenciar suas notas.
            </p>
          </div>
          <form onSubmit={handleLogin} className="grid gap-4">
            <div className="grid gap-2">
              <Label htmlFor="email">Email</Label>
              <Input
                id="email"
                type="email"
                placeholder="seu@email.com"
                required
                value={email}
                onChange={(e) => setEmail(e.target.value)}
                disabled={isLoading}
              />
            </div>
            <div className="grid gap-2">
              <div className="flex items-center">
                <Label htmlFor="password">Senha</Label>
                <a
                  href="#"
                  className="ml-auto inline-block text-sm underline"
                  onClick={(e) => { e.preventDefault(); toast.info('Funcionalidade de recuperação de senha em desenvolvimento.'); }}
                >
                  Esqueceu sua senha?
                </a>
              </div>
              <Input 
                id="password" 
                type="password" 
                required 
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                disabled={isLoading}
              />
            </div>
            <Button type="submit" className="w-full" disabled={isLoading}>
              {isLoading ? <Loader2 className="mr-2 h-4 w-4 animate-spin" /> : 'Login'}
            </Button>
          </form>
          <div className="mt-4 text-center text-sm">
            Não tem uma conta?{" "}
            <a href="#" className="underline" onClick={(e) => { e.preventDefault(); toast.info('O cadastro de novos usuários é feito pelo administrador.'); }}>
              Solicite acesso
            </a>
            <p className="text-xs text-muted-foreground mt-2">
              O acesso será liberado por um administrador.
            </p>
          </div>
        </div>
      </div>
      <div className="hidden bg-muted lg:block">
        <div className="flex h-full w-full items-center justify-center bg-gray-100 dark:bg-zinc-900">
            <div className="text-center p-8">
                <h2 className="text-4xl font-bold mb-4">Otimize seu fluxo de trabalho</h2>
                <p className="text-lg text-muted-foreground max-w-md mx-auto">
                    Importe, renomeie e organize suas notas fiscais em PDF de forma automática e inteligente. Gere relatórios e tenha total controle.
                </p>
            </div>
        </div>
      </div>
    </div>
  );
}
